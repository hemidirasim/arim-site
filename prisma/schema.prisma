// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  titleAz     String
  description String
  descriptionAz String
  image       String?
  slug        String   @unique
  content     String?
  contentAz   String?
  features    Json?    // Array of feature strings
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  nameAz    String
  content   String
  contentAz String
  rating    Int      @default(5)
  image     String?
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}

model Partner {
  id        String    @id @default(cuid())
  name      String
  nameAz    String
  logo      String?
  website   String?
  isActive  Boolean   @default(true)
  order     Int       @default(0)
  projects  Project[] // Layihələr
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("partners")
}

model Content {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  valueAz   String
  type      String   @default("text")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("content")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

model Project {
  id          String   @id @default(cuid())
  title       String   // Yalnız Azərbaycan dilində
  description String   // Yalnız Azərbaycan dilində
  mainImage   String?  // Əsas foto
  images      Json?    // Əlavə fotolar array
  partnerId   String?  // Hansı tərəfdaşa aid olduğu
  partner     Partner? @relation(fields: [partnerId], references: [id])
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

enum Role {
  USER
  ADMIN
}
